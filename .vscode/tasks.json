{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run C++ silently",
            "type": "process",
            "command": "bash",
            "args": [
                "-c",
                "g++ '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' && '${fileDirname}/${fileBasenameNoExtension}' < '${fileDirname}/input.txt' > '${fileDirname}/output.txt'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}
